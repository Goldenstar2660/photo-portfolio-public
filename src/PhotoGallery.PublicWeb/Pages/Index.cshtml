@page
@model IndexModel
@{
    ViewData["Title"] = "Photography - Home";
    ViewData["ActivePage"] = "Home";
}

<!-- Hero Section Start -->
<div class="container-fluid px-4 pt-3 pb-5 mb-5 bg-dark text-secondary">
    <div class="row g-5 py-3">
        <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
            <h1 class="display-1 text-secondary text-center mb-0">@Model.HomeData.Name</h1>
        </div>
        
        @if (Model.HomeData.HeroPhotos.Any())
        {
            <!-- Hero Photos Carousel -->
            @if (Model.HomeData.HeroPhotos.Count > 0)
            {
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                    <img class="img-fluid rounded mb-3" src="@Model.HomeData.HeroPhotos[0].Url" alt="@Model.HomeData.HeroPhotos[0].Title">
                    <p>
                        <i class="bi bi-arrow-down animate-up-down" style="font-size: 3rem;"></i>
                    </p>
                    <p class="mb-0">
                        @Model.HomeData.IntroductionText
                    </p>
                </div>
            }
            
            @if (Model.HomeData.HeroPhotos.Count > 1)
            {
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.3s" style="min-height: 500px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute w-100 h-100 rounded" src="@Model.HomeData.HeroPhotos[1].Url" alt="@Model.HomeData.HeroPhotos[1].Title" style="object-fit: cover;">
                    </div>
                </div>
            }
            
            @if (Model.HomeData.HeroPhotos.Count > 2)
            {
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                    <p>
                        Explore my photography journey through various albums, capturing moments from biking adventures to everyday life.
                    </p>
                    <p>
                        <i class="bi bi-arrow-up animate-up-down" style="font-size: 3rem;"></i>
                    </p>
                    <img class="img-fluid rounded" src="@Model.HomeData.HeroPhotos[2].Url" alt="@Model.HomeData.HeroPhotos[2].Title">
                </div>
            }
        }
        else
        {
            <!-- Fallback if no photos -->
            <div class="col-12 text-center">
                <p class="mb-0">@Model.HomeData.IntroductionText</p>
            </div>
        }
    </div>
</div>
<!-- Hero Section End -->

<!-- Featured Albums Section Start -->
@if (Model.HomeData.FeaturedAlbums.Any())
{
    <div class="container-fluid p-5">
        <div class="row gx-5">
            <div class="col-12 mb-4 wow fadeIn" data-wow-delay="0.1s">
                <h5 class="section-title">Featured Albums</h5>
                <h1 class="display-3 mb-0">Explore My Photo Collections</h1>
            </div>
        </div>
        <div class="row g-4">
            @foreach (var album in Model.HomeData.FeaturedAlbums)
            {
                <div class="col-lg-4 col-md-6 wow fadeIn" data-wow-delay="0.@(Model.HomeData.FeaturedAlbums.IndexOf(album) + 1)s">
                    <div class="bg-light rounded h-100 p-4">
                        @if (!string.IsNullOrEmpty(album.CoverPhotoUrl))
                        {
                            if (album.CoverPhotoUrl!.StartsWith("/uploads/photos/"))
                            {
                                var relCover = album.CoverPhotoUrl.Replace("/uploads/photos/", string.Empty).TrimStart('/');
                                <a asp-page="/Album" asp-route-id="@album.Id">
                                    <img class="img-fluid rounded mb-3 cover-thumb" src="@($"/img/{relCover}?w=1200&h=400&fit=crop&fmt=webp")" alt="@album.Name">
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Album" asp-route-id="@album.Id">
                                    <img class="img-fluid rounded mb-3 cover-thumb" src="@album.CoverPhotoUrl" alt="@album.Name">
                                </a>
                            }
                        }
                        <h4>
                            <a asp-page="/Album" asp-route-id="@album.Id" class="text-dark text-decoration-none">
                                @album.Name
                            </a>
                        </h4>
                        <p class="mb-2">
                            <span class="badge bg-primary">@album.Topic</span>
                            <span class="ms-2 text-muted"><i class="bi bi-images"></i> @album.PhotoCount photos</span>
                        </p>
                        <p class="mb-0">@album.Description</p>
                        <div class="mt-3">
                            <a asp-page="/Album" asp-route-id="@album.Id" class="btn btn-primary">View Album</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<!-- Featured Albums Section End -->

<!-- Stats Section Start -->
<div class="container-fluid bg-dark facts p-5 my-5">
    <div class="row gx-5 gy-4 py-5">
        <div class="col-lg-6 col-md-6 wow fadeIn" data-wow-delay="0.1s">
            <div class="d-flex">
                <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px; background: #111111;">
                    <i class="bi bi-folder2-open fs-4 text-primary"></i>
                </div>
                <div class="ps-4">
                    <h5 class="text-white">Albums</h5>
                    <h1 class="display-5 text-secondary mb-0">@Model.HomeData.TotalAlbums</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 wow fadeIn" data-wow-delay="0.2s">
            <div class="d-flex">
                <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                    style="width: 80px; height: 80px; background: #111111;">
                    <i class="bi bi-image fs-4 text-primary"></i>
                </div>
                <div class="ps-4">
                    <h5 class="text-white">Photos</h5>
                    <h1 class="display-5 text-secondary mb-0">@Model.HomeData.TotalPhotos</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Stats Section End -->
